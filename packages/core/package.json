{
  "name": "@flowmonkey/core",
  "version": "1.0.0",
  "description": "FlowMonkey core execution engine",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./test": {
      "import": {
        "types": "./dist/test.d.ts",
        "default": "./dist/test.js"
      },
      "require": {
        "types": "./dist/test.d.cts",
        "default": "./dist/test.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flowmonkey/flowmonkey.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "workflow",
    "engine",
    "state-machine",
    "orchestration",
    "typescript"
  ],
  "license": "MIT"
}
