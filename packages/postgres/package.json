{
  "name": "@flowmonkey/postgres",
  "version": "1.0.0",
  "description": "PostgreSQL storage adapters for FlowMonkey",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "@flowmonkey/core": "^1.0.0",
    "pg": "^8.0.0"
  },
  "devDependencies": {
    "@flowmonkey/core": "workspace:*",
    "@types/node": "^20.19.30",
    "@types/pg": "^8.10.0",
    "pg": "^8.11.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flowmonkey/flowmonkey.git",
    "directory": "packages/postgres"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "flowmonkey",
    "postgres",
    "postgresql",
    "storage",
    "workflow"
  ],
  "license": "MIT"
}
