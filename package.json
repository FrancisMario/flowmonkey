{
  "name": "flowmonkey",
  "private": true,
  "version": "0.0.0",
  "description": "Minimal workflow execution engine",
  "author": "FlowMonkey Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/francismario/flowmonkey.git"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "dev": "pnpm -r --parallel dev",
    "release": "pnpm build && pnpm test && pnpm -r publish --access public",
    "release:dry": "pnpm build && pnpm test && pnpm -r publish --access public --dry-run",
    "version:patch": "pnpm -r exec -- npm version patch --no-git-tag-version",
    "version:minor": "pnpm -r exec -- npm version minor --no-git-tag-version",
    "version:major": "pnpm -r exec -- npm version major --no-git-tag-version"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
